<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black_color">

        <TextView
            android:id="@+id/tv_gallery_chip"
            android:layout_width="@dimen/gallery_chip_width"
            android:layout_height="@dimen/gallery_chip_height"
            android:layout_marginTop="@dimen/gallery_chip_top_margin"
            android:background="@drawable/drawable_radius_white_circle"
            android:gravity="center"
            android:textColor="@color/black_color"
            android:textSize="@dimen/material_text_body1"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="1/10" />

        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/vp_gallery"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <ImageView
            android:id="@+id/iv_gallery_exit"
            android:layout_width="@dimen/gallery_exit_button_size"
            android:layout_height="@dimen/gallery_exit_button_size"
            android:layout_margin="@dimen/gallery_exit_button_margin"
            android:src="@drawable/ic_close_white_24dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
