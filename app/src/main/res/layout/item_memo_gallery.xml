<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="@dimen/todo_gallery_size"
        android:layout_height="@dimen/todo_gallery_size">

        <ImageView
            android:id="@+id/iv_thumbnail_item"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:adjustViewBounds="true" />

        <ImageView
            android:id="@+id/iv_thumbnail_remove"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:background="@drawable/ic_white_color_circle"
            android:src="@drawable/ic_remove_circle_red_24dp"
            app:layout_constraintHorizontal_bias="0.95"
            app:layout_constraintVertical_bias="0.05"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>